<div class="border-1 h-20 w-fit m-3 bg-gray rounded border-gray-500 bg-gray-300 outline-offset-2">
	<div class="flex justify-center px-2 gap-2">
		<div class="flex flex-col justify-center items-center">
			<span class="text-2xl font-bold">@Temperature&deg;C</span>
			<span class="text-sm">Temperature</span>
		</div>
		<div class="flex flex-col justify-center items-center">
			<span class="text-2xl font-bold">@Humidity%</span>
			<span class="text-sm">Humidity</span>
		</div>
	</div>
	<div class="flex justify-center">
		<span class="text-base">@DeviceName</span>
	</div>
</div>

@code {
	[Parameter, EditorRequired]
	public string DeviceName { get; set; }

	[Parameter]
	public double Humidity { get; set; }

	[Parameter]
	public double Temperature { get; set; }
}
